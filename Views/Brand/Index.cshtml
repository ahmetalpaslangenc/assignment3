@model IEnumerable<VehicleRegistrationApp.Models.Brand>

<h2>Brand List</h2>

<a asp-action="Create" class="btn btn-primary">Create New Brand</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr>
                <td>@brand.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@brand.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@brand.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
