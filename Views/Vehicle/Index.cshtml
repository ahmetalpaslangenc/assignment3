@model IEnumerable<VehicleRegistrationApp.Models.Vehicle>

@{
    ViewData["Title"] = "Vehicle List";
}

<h1>Vehicle List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Vehicle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Car Plate</th>
            <th>Km</th>
            <th>Model</th>
            <th>Color</th>
            <th>Gear Type</th>
            <th>Brand</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.CarPlate</td>
            <td>@item.Km</td>
            <td>@item.Model</td>
            <td>@item.Color</td>
            <td>@item.GearType</td>
            <td>@item.Brand?.Name</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

